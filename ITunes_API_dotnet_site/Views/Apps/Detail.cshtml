@model ITunes_API_dotnet_site.Models.Application;

@section head {
    <title>@Model.artistName</title>
}



<div class="row">
    <div class="col-3">
        <div class="card">
            <img class="card-img" src=@Model.artworkUrl100 alt="Avatar" style="width:100%">
            <div class="container">
                <p class="card-title"><a href=@Model.trackViewUrl target="_blank">@Model.trackName</a></p>
                <p style="font-size:10px">@Model.artistName</p>

                <p>Genre:</p>

                <p style="font-size:10px">@Model.primaryGenreName</p>
            </div>
        </div>
    </div>
    <div class="col-9">
        <h2>@Model.trackName </h2>

        </br>
        @Model.artistName
        </br>
        @Model.averageUserRating, @Model.UserRatingCount Ratings
        </br>
        @Model.formattedPrice
        </br>
        Offers In-App Purchases
    </div>
</div>

