<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- viewport meta tag on all pages -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/responsive.css">
    <!-- load font awesome fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @RenderSection("head", required : false)
</head>
<body>

    <div class="topnav sticky" id="topNavToggle" style="z-index:1000;">
        <!-- Set class="active" on your page -->
        <a href="/" class="@(ViewData["Title"].ToString() == "Top Free" ? "active" : "")">Top Free</a>
        <a href="/?option=top-paid" class="@(ViewData["Title"].ToString() == "Top Paid" ? "active" : "")">Top Paid</a>
        <a href="/dashboard" class="@(ViewData["Title"].ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
        <a href="/about" class="@(ViewData["Title"].ToString() == "About Us" ? "active" : "")">About Us</a>
        <a href="/search" class="@(ViewData["Title"].ToString() == "Search" ? "active" : "")"><i class="fa fa-search" aria-hidden="true"></i> Search</a>

        <a href="javascript:void(0);" class="icon" onclick="toggleNav()">
            <i class="fa fa-bars"></i>
        </a>
        <div class="logo">
            <img src="/img/usf-logo.png" height="30px" />
        </div>
    </div>
    <div class="content">

        @RenderBody()

    </div>
    <footer class="col-12 text-center">
        <div>
            <h2>Group 2 - iTunes API Mobile App Tool</h2>
            <span class="copyright">&#169; 2020 - Deborah Gause, Neeraj Kumar, Sarah Wasselle, and Alexander Seufert</span>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script>
    function toggleNav() {
    var x = document.getElementById("topNavToggle");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
</body>
</html>